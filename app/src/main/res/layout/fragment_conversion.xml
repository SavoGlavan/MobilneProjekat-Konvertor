<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.conversion.ConversionFragment2"
    android:background="@drawable/backgroundmobile">



    <Button
        android:id="@+id/conversionButton"
        style="@style/ButtonStyle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:layout_marginTop="500dp"
        android:layout_gravity="center_horizontal">


    </Button>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="40dp"
        android:layout_marginTop="575dp"
        android:background="@drawable/rounded_corner_view"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_view"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp">
        <TextView
            android:id="@+id/amountLabel"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:text="@string/amount"
            ></TextView>
        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/teal200_dark"
            android:layout_height="40dp"
            android:background="@drawable/amount_background"
            android:inputType="numberDecimal"
            ></EditText>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context=".ui.conversion.ConversionFragment2">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/select"
            android:enabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            >
            <AutoCompleteTextView
                android:id="@+id/auto_complete_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text|textNoSuggestions"
                android:background="@drawable/rounded_corner_view">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
    </ScrollView>
    <ScrollView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:context=".ui.conversion.ConversionFragment2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/prvimeni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:enabled="true"
            android:hint="@string/select"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:enabled="true"
                android:id="@+id/auto_complete_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions"
                android:background="@drawable/rounded_corner_view">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
    </ScrollView>
    <ScrollView
        android:layout_marginTop="100dp"
        android:layout_width="240dp"
        android:layout_height="100dp"
        tools:context=".ui.conversion.ConversionFragment2">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:enabled="true"
            android:hint="@string/mode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:enabled="true"
                android:id="@+id/auto_complete_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions"
                android:background="@drawable/rounded_corner_view">

            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
    </ScrollView>
    <TextView
        android:id="@+id/dateTextView"
        android:textSize="22sp"
        android:background="@drawable/rounded_corner_view"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="318dp"
        android:layout_marginLeft="15dp"
        ></TextView>

    <Button
        android:id="@+id/dateButton"
        style="@style/ButtonStyle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="310dp"
        android:text="@string/ChangeDate">


    </Button>
    <ImageButton
        android:id="@+id/swapButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="115dp"
        style="@style/ButtonStyle"
        android:src="@drawable/ic_swap"
        android:text="@string/swap">
    </ImageButton>
</FrameLayout>



